# Test environment for create-supalite
# Simulates a fresh Ubuntu environment with only Node.js

FROM node:20-bullseye

# Install basic tools that users might have
RUN apt-get update && apt-get install -y \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create a test user (non-root, more realistic)
RUN useradd -m -s /bin/bash testuser

# Switch to test user
USER testuser
WORKDIR /home/testuser

# Set up npm to install global packages in user directory
RUN mkdir -p /home/testuser/.npm-global && \
    npm config set prefix '/home/testuser/.npm-global'

ENV PATH=/home/testuser/.npm-global/bin:$PATH

# Default command is bash
CMD ["/bin/bash"]
